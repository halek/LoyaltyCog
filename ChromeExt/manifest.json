{
  "name": "Injetar LoyaltyCog",
  "description": "Injeta o script de setup do projeto LoyaltyCog",
  "version": "0.0.1",
  "manifest_version": 2,

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },

  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["inject.js"]
    }
  ],

  "content_security_policy": "script-src 'self' https://loyaltycog.mybluemix.net; object-src 'self'",

  "browser_action": {
    "default_title": "Injetar LoyaltyCog"
  }
}
